<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:id="@+id/todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/round"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_marginTop="30dp"
                    android:id="@+id/ima"
                    android:layout_centerHorizontal="true"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:lottie_rawRes="@raw/animd"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
                <GridLayout
                    android:id="@+id/lis"
                    android:layout_marginTop="40dp"
                    android:background="#00FFFFFF"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_below="@+id/ima"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp"

                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:hint="First Name"
                            android:id="@+id/firstNa"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/firstNaEd"
                                android:layout_width="150dp"
                                android:layout_height="50dp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_marginLeft="15dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:hint="Last Name"
                            android:id="@+id/lastNa"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/lastNaEd"
                                android:layout_width="150dp"
                                android:layout_height="50dp"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:hint="Usser"
                            android:id="@+id/usser"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/usserEd"
                                android:layout_width="150dp"
                                android:layout_height="50dp"/>
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_marginLeft="15dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:hint="Email"
                            android:id="@+id/email"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/emailEd"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:inputType="textEmailAddress"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginLeft="5dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:hint="Password"
                            android:id="@+id/password"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/passwordEd"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:inputType="textPassword"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_marginLeft="15dp">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:hint="Conf. Password"
                            android:id="@+id/conPass"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/conPassdEd"
                                android:layout_width="150dp"
                                android:layout_height="50dp"
                                android:inputType="textPassword"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </GridLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@+id/lis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:hint="Institution"
                    android:id="@+id/inst"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/instEd"
                        android:layout_width="300dp"
                        android:layout_height="50dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/goBtn"
                    android:onClick="sendBt"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/inst"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:text="Go"
                    android:background="@drawable/round2" />
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_below="@+id/goBtn"
                    android:id="@+id/progressBR"
                    android:layout_alignParentBottom="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    app:lottie_rawRes="@raw/progres"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </ScrollView>

    </LinearLayout>



</RelativeLayout>